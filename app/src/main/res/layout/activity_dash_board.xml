<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.dashboard.DashBoardActivity">

    <data>

        <variable
            name="vmDashBoard"
            type="roadfriend.app.ui.dashboard.DashBoardViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_low"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:gravity="center"
                android:text="User"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:gravity="center"
                android:text="@{vmDashBoard.userSizeData.toString()}"
                android:textSize="15sp"
                tools:text="Size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:gravity="center"
                android:text="Trip"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:gravity="center"
                android:text="@{vmDashBoard.tripSizeData.toString()}"
                android:textSize="15sp"
                tools:text="Size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:gravity="center"
                android:textSize="15sp"
                tools:text="Size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:gravity="center"
                android:textSize="15sp"
                tools:text="Size" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/devam"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devam" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Teste al" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Yolculuk Gir" />


    </LinearLayout>
</layout>
