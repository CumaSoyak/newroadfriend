<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginOrRegisterFragment">

    <fragment
        android:id="@+id/loginOrRegisterFragment"
        android:name="com.biletdukkani.b2c.fragments.loginOrRegister.LoginOrRegisterFragment"
        android:label="login_or_register_fragment"
        tools:layout="@layout/login_or_register_fragment">
        <action
            android:id="@+id/action_loginOrRegister_to_password"
            app:destination="@id/passwordFragment" />
        <action
            android:id="@+id/action_loginOrRegister_to_continueWithSocial"
            app:destination="@id/continueWithSocialFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.biletdukkani.b2c.fragments.password.PasswordFragment"
        android:label="password_fragment"
        tools:layout="@layout/password_fragment" />
    <fragment
        android:id="@+id/continueWithSocialFragment"
        android:name="com.biletdukkani.b2c.fragments.continueWithSocial.ContinueWithSocialFragment"
        android:label="continue_with_social_fragment"
        tools:layout="@layout/continue_with_social_fragment" >
        <action
            android:id="@+id/action_continueWithSocialFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />
    </fragment>
</navigation>