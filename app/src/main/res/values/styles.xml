    <style name="AuthButtonStyle">
        <item name="android:background">@drawable/custom_border_blue_button</item>
        <item name="android:textColor">@color/border</item>
        <item name="android:fontFamily">@font/ultrabold</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton
        </item>
    </style>

    <style name="SelectItemStyle">
        <item name="android:background">@drawable/border_black</item>
        <item name="android:fontFamily">@font/muliblackbold</item>
