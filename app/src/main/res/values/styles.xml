<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>


    //facebook progrees için

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar"></style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchViewTheme" parent="Base.Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
         <item name="android:textColor">@color/border</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CheckBoxStyle">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorSecondary">@color/grayDark</item>
    </style>

    <style name="MatrielEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>

    <style name="ViewStyle">
        <item name="android:background">@color/btc_gray_light</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_height">0.7dp</item>

    </style>

    <style name="ProfilItemStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/btc_black</item>
        <item name="android:textSize">@dimen/font_text_medium</item>

    </style>

    <style name="StyleCardView">
        <item name="android:bottomLeftRadius">7dp</item>
        <item name="android:topLeftRadius">7dp</item>
        <item name="android:bottomRightRadius">7dp</item>
        <item name="android:topRightRadius">7dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="SpotsDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Lütfen Bekleyiniz...</item>
        <item name="DialogSpotColor">@color/green_1</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <style name="LoadingDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loading…</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardViewBottomCorner">
        <item name="android:bottomLeftRadius">7dp</item>
        <item name="android:bottomRightRadius">7dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="windowActionBar">false</item>
        <!--        <item name="colorPrimaryDark">#04193B</item>-->
    </style>


    <style name="DialogFragmentTheme" parent="AppTheme">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/DialogFragmentAnimation</item>
    </style>

    <style name="DialogFragmentAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_fragment_right</item>
        <item name="android:windowExitAnimation">@anim/slide_fragment_left</item>
    </style>


    <style name="DialogFragmentThemeNoAnimation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="GreenButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_green_button</item>
        <item name="android:fontFamily">@font/ultrabold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InActiveButtonStyle">
        <item name="android:textColor">@color/hint_gray</item>
        <item name="android:background">@drawable/custom_inactive_button</item>
        <item name="android:fontFamily">@font/ultrabold</item>
    </style>


    <style name="BorderButtonStyle">
        <item name="android:textColor">@color/border</item>
        <item name="android:background">@drawable/custom_border_blue_button</item>
        <item name="android:fontFamily">@font/ultrabold</item>
    </style>

    <style name="BorderGrayButtonStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/custom_border_gray_button</item>
        <item name="android:fontFamily">@font/ultrabold</item>
    </style>

    <style name="MaterialButtonActiveStyle" parent="MaterialButtonStyle">
        <item name="android:height">@dimen/btn_height</item>
        <item name="android:textColor">@color/btc_white</item>
        <item name="backgroundTint">@color/btc_blue</item>
        <!--<item name="android:background">@drawable/button_round_primary_blue</item>-->
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/font_text_small</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="MaterialButtonOutlinedRegisterStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/font_text_small</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@color/btc_white</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/btc_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/btc_gray</item>
    </style>


    <style name="AuthEditTextStyle">>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>


    <style name="TextViewStyleTitle">
        <item name="android:fontFamily">@font/sfprodisplay_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextColor</item>
    </style>

    <style name="StaionTextStyle">
        <item name="android:textColor">@color/border</item>
