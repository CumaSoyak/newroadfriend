        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/green</item>
        <item name="android:secondaryProgress">@color/green</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="bottomNavigation">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DialogTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>





    <style name="materialButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


